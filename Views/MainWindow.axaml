<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:d2c_launcher.ViewModels"
        xmlns:v="using:d2c_launcher.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="d2c_launcher.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.ico"
        Title="D2C Launcher">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1a6b30" IsVisible="{Binding UpdateAvailable}" Padding="12,8">
            <Grid>
                <TextBlock Text="A new version is available and ready to install."
                           VerticalAlignment="Center" Foreground="White" FontSize="13"/>
                <Button HorizontalAlignment="Right" Content="Restart &amp; Update"
                        Command="{Binding ApplyUpdateCommand}"/>
            </Grid>
        </Border>

        <ContentControl Grid.Row="1" Content="{Binding CurrentContentViewModel}"/>
    </Grid>

</Window>

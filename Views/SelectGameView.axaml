<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:vm="using:d2c_launcher.ViewModels"
            x:Class="d2c_launcher.Views.SelectGameView"
            x:DataType="vm:SelectGameViewModel">

   <UserControl.Background>
       <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
           <GradientStop Color="#0c0c0c" Offset="0"/>
           <GradientStop Color="#1c2024" Offset="0.55"/>
           <GradientStop Color="#0c0c0c" Offset="1"/>
       </LinearGradientBrush>
   </UserControl.Background>

   <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
               Spacing="16" MaxWidth="420">

       <TextBlock Text="Выбор Dota 2"
                  FontSize="28" FontWeight="Bold"
                  HorizontalAlignment="Center"
                  Foreground="#D9D9D9"/>

       <TextBlock Text="Укажите путь к dota.exe для продолжения."
                  FontSize="14" HorizontalAlignment="Center"
                  Foreground="#AAAAAA"/>

       <Button Content="Выбрать dota.exe"
               HorizontalAlignment="Center"
               Padding="24,12" CornerRadius="10"
               FontSize="15" FontWeight="SemiBold"
               Foreground="White" BorderThickness="0"
               Click="OnBrowseClicked">
           <Button.Background>
               <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                   <GradientStop Color="#1a5aaa" Offset="0"/>
                   <GradientStop Color="#3a90d6" Offset="1"/>
               </LinearGradientBrush>
           </Button.Background>
       </Button>

   </StackPanel>

</UserControl>

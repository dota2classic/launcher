<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:d2c_launcher.ViewModels"
             x:Class="d2c_launcher.Views.SelectGameView"
             x:DataType="vm:SelectGameViewModel">

    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0D0E10" Offset="0"/>
            <GradientStop Color="#141516" Offset="0.55"/>
            <GradientStop Color="#0B0C0E" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                Spacing="16" MaxWidth="420">

        <TextBlock Text="Select Dota 2"
                   FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="#E9D39A"/>

        <TextBlock Text="Select your dota.exe to continue."
                   FontSize="14" HorizontalAlignment="Center"
                   Foreground="#AFA38A"/>

        <Button Content="Browse for dota.exe"
                HorizontalAlignment="Center"
                Padding="24,12" CornerRadius="10"
                FontSize="15" FontWeight="SemiBold"
                Foreground="White" BorderThickness="0"
                Click="OnBrowseClicked">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1F8B4C" Offset="0"/>
                    <GradientStop Color="#2FBF6A" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </StackPanel>

</UserControl>
